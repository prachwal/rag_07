# Editor configuration for consistent coding styles
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{js,jsx,ts,tsx,json,css,scss,html,md,yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 80

[Makefile]
indent_style = tab

[*.{bat,cmd}]
end_of_line = crlf
